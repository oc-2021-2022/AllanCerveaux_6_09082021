{
  "compileOnSave": false,
  "compilerOptions": {
		"baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
		},
    "composite": true,
    "resolveJsonModule": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "downlevelIteration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom", "esnext.asynciterable"],
  },
	"include": ["src/**/*"]
}
